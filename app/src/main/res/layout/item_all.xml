<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/item_all_image"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_toRightOf="@id/item_all_image"
            android:id="@+id/item_all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the pest name"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold" />

        <TextView
            android:layout_toRightOf="@id/item_all_image"
            android:layout_below="@id/item_all_name"
            android:id="@+id/item_all_commonnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common names of the pest"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/lightGray" />
</LinearLayout>